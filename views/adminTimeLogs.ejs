<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Daily Employee Timesheets</title>
</head>
<body>

  <table>
    <thead>
      <th>Date: </th>
      <th>Employee: </th>
      <th>Time In: </th>
      <th>Time Out: </th>
      <th>Total Hours: </th>
      <th>Delete</th>
    </thead>
    <tbody>
      <% results.forEach(record => { %>
        <tr>
          <td><%= record.date %></td>
          <td><%= record.employee %></td>
          <td><%= record.timeIn %></td>
          <td><%= record.timeOut %></td>
          <td><%= record.totalHours %></td>
          <td><a href="/delete-timelog/<%= record._id %>">Delete</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
